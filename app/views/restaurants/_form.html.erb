<div class="container">
  <div class="form-group">
    <%= simple_form_for @restaurant do |f| %>
      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :phone_number %>
      <%= f.input :category, collection: ['chinese', 'japanese', 'french', 'belgian', 'italian'] %>
      <%= f.submit "Validate", class: "btn btn-primary" %>
    <% end %>
    <hr>
    <%= link_to "Back to the list", restaurants_path, class: "btn btn-primary"%>
  </div>
</div>
